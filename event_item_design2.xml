<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="120dp">

        <androidx.cardview.widget.CardView

            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/imageview1"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="60dp"
                android:scaleType="centerCrop"
                android:layout_height="60dp"
                android:src="@drawable/app_logo" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/delete_event"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/textview_date2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/textview_title2"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/imageview1"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="15dp">

        </TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:id="@+id/textview_date2"
            android:layout_toRightOf="@id/imageview1"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:text="Date">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:id="@+id/textview_hour2"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imageview1"
            android:layout_below="@id/imageview1"
            android:textColor="@color/black"
            android:text="Hour">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/textview_managerEmail2"
            android:textSize="15dp"
            android:layout_marginTop="-25dp"
            android:layout_marginLeft="120dp"
            android:layout_toRightOf="@id/imageview1"
            android:layout_below="@id/imageview1"
            android:textColor="@color/black"
            android:text="Manager Email">

        </TextView>

    </RelativeLayout>

</RelativeLayout>